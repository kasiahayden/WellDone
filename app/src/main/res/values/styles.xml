<resources>

    <style name="WellDoneBaseTheme" parent="android:Theme.Material.Light">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="WellDone.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="GreenActionBar"
        parent="android:Widget.Material.Light.ActionBar">
        <item name="android:background">#119922</item>
        <item name="android:titleTextStyle">@style/WellDone.ActionBar.TitleTextStyle</item>
    </style>
    
    <style name="CreateReportTheme" parent="@style/WellDoneBaseTheme">
        <item name="android:actionBarStyle">@style/GreenActionBar</item>
    </style>
    <style name="WellDoneBlueActionBar"
        parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/wellDoneBlue</item>
    </style>

</resources>
