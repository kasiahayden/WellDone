<resources>

    <style name="WellDoneBaseTheme" parent="android:Theme.Material.Light">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorPrimaryDark">#0E88B5</item>
        <item name="android:colorPrimary">@color/wellDoneBlue</item>
        <item name="android:colorForeground">@android:color/white</item>
        <item name="android:actionBarStyle">@style/WellDone.ActionBar.Style</item>
        <item name="android:colorAccent">@android:color/white</item>
    </style>
    
    <style name="WellDone.ActionBar.Style" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:titleTextStyle">@style/WellDone.ActionBar.TitleTextStyle</item>
    </style>

    <style name="WellDone.ActionBar.TitleTextStyle" parent="android:TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CreateReportTheme" parent="@style/WellDoneBaseTheme">
        <item name="android:actionBarStyle">@style/GreenActionBar</item>
        <item name="android:colorPrimaryDark">#328551</item>
    </style>

    <style name="PumpBrowserTheme" parent="@style/WellDoneBaseTheme">
        <item name="android:actionBarStyle">@style/BlueActionBar</item>
        <item name="android:colorPrimaryDark">#0E88B5</item>
    </style>

    <style name="BlueActionBar" parent="android:Widget.Material.Light.ActionBar">
        <item name="android:background">@color/wellDoneBlue</item>
        <item name="android:titleTextStyle">@style/WellDone.ActionBar.TitleTextStyle</item>
    </style>

    <style name="GreenActionBar" parent="android:Widget.Material.Light.ActionBar">
        <item name="android:background">@color/createReportGreen</item>
        <item name="android:titleTextStyle">@style/WellDone.ActionBar.TitleTextStyle</item>
    </style>

</resources>
