<?xml version="1.0" encoding="utf-8"?>
<com.codepath.welldone.PumpExpandedDetailsView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="85dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:visibility="gone"
    android:background="@android:color/holo_red_dark"
    android:id="@+id/vgDetailsContainer"
    tools:showIn="@layout/row_pump">
    <TextView
        android:id="@+id/tvFlavaFlave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pump flavor text"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvFlavaFlave"
        android:text="Submit New Report"/>

</com.codepath.welldone.PumpExpandedDetailsView>
